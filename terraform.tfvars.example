# Example Terraform variables
# Copy this file to terraform.tfvars and customize as needed

aws_region   = "us-east-1"
project_name = "realm9"
environment  = "dev"

# Billing - PAY_PER_REQUEST is simpler, PROVISIONED for predictable workloads
billing_mode = "PAY_PER_REQUEST"

# Table keys
hash_key      = "id"
hash_key_type = "S"
